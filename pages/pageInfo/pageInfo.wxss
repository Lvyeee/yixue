/* pages/pageInfo/pageInfo.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #fcfcfc;
}

.scrollarea {
  overflow-y: hidden;
  position: relative;
}

.swiper {
  width: 100%;
  height: 400rpx;
}


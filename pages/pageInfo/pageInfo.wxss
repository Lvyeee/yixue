.swiper image {
  height: 400rpx;
  width: 100%;
}

.price_box {
  height: 100rpx;
  width: 100%;
  background-color: var(--theme-grey);
  border-radius: 10px;
  position: absolute;
  top: 390rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price_box>.price {
  margin-left: 20rpx;
  font-size: 1.5rem;
  font-weight: 800;
}

.price_box>.sales {
  color: #746a6a;
  margin-right: 20rpx;
}

.project_box {
  width: 100%;
  margin-top: 90rpx;
  padding-bottom: 180rpx;
}



.comment_list {
  width: 100%;
  background-color: beige;
}

.comment_list_name {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.comment_list_name>van-image {
  margin-right: 25rpx;
}

.comment_list_name_box {
  display: flex;
  align-items: center;
}

.comment_list_name_box>span {
  margin-left: 10rpx;
  font-size: 1rem;
}

.comment_list_content {
  padding: 0 40rpx 40rpx;
  width: 100%-80rpx;
  overflow-wrap: break-word;
  border-bottom: 1px solid var(--theme-border);
}

.comment_but {
  margin: 10rpx 0;
  width: 100%;
}

.comment_but>van-button>button {
  width: 90%;
  border-radius: 15rpx;
}

.comment_dialog_content{
  padding: 40rpx;
  height: 300rpx;
}

.comment_dialog_content>textarea{
  flex: 4;
  background-color: #f4f4f4;
  height: 164rpx;
  border-radius: 8rpx;
  /* 让placeholder与border留有一定距离 */
  width: 90%;
  padding: 20rpx;
}


Page {
  background: #ffffff;
  
}

.login{
  text-align: center;
}

.login>image{
  width: 120rpx;
  height: 240rpx;
  padding-top: 300rpx;
}

.appName{
  font-size: 60rpx;
  font-weight: 800;
  font-family: "Arial", sans-serif;
  margin-bottom: 200rpx;
}

.login-header {
  width: 100%;
  padding: 16rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
}

.user-head {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.user-title {
  width: calc(100% - 196rpx - 10rpx);
  margin-left: 16rpx;
  font-size: 30rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.user-menu {
  width: 100%;
  margin-top: 24rpx;
}

.link-url {
  margin-top: 24rpx;
}
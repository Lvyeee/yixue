/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  align-items: center;
  width: 100%;
}

.swiper {
  width: 100%;
  height: 400rpx;
}

.swiper_box {
  width: 100%;
  height: 400rpx;
}

swiper-item {
  width: 100%;
  height: 400rpx;
  display: inline-block;
  overflow: hidden;
}

swiper-item image {
  height: 400rpx;
  width: 100%;
}

.user_box {
  height: 100rpx;
  width: 90%;
  margin: 0 5%;
  position: relative;
}

.navAll {
  padding: 40rpx 10rpx 0rpx;
}

.navList {
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 88rpx;
}

.navList:first-child {
  margin-bottom: 18rpx;
}

.navList>view {
  width: 100%;
  margin-right: 20rpx;
  border-radius: 6rpx;
  box-shadow: 2rpx 2rpx 10rpx var(--theme-border);
}

.navList>navigator {
  columns: #ffffff;
  font-size: 45rpx;
  display: flex;
  padding: 0 22rpx;
  box-sizing: border-box;
  align-items: center;
  width: 100%;
  margin-right: 20rpx;
  background-color: var(--theme-bg-main);
  border-radius: 6rpx;
  box-shadow: 2rpx 2rpx 10rpx;
  color: #181515;
}

.navList>navigator>image {
  display: block;
  width: 40rpx;
  margin-right: 16rpx;
}

.navList>navigator:last-child {
  margin-right: 0;
}

.new_list {
 
}

.new_list_card {
  display: flex;
  justify-self: start;
  padding: 20rpx;
  /* background: linear-gradient(to bottom right, #f3f0f0, brown); */
  border-bottom: 2rpx solid;
}

.new_list_card>image {
  height: 120rpx;
  width: 200rpx;
  margin-right: 100rpx;
}

.new_list_card_info_title {
  font-weight: 900;
  font-size: 40rpx;
  color: #000000;
}

